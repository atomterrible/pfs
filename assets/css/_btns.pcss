@layer components {
  .btns {
    @apply flex gap-5;
  }
  .btn {
    box-shadow: 0px 0px 5px #c2d076;
    transition: 0.4s ease;
    @apply flex
    m-0 py-4 px-5
    leading-none tracking-widest
    border-2 border-solid border-accent
    text-accent font-semibold;
  }
  .cta {
    @apply bg-accent text-dark;
  }
  .btn:hover {
    box-shadow: 0px 0px 10px #c2d076;
    @apply bg-white text-dark border-white;
  }
}
