@layer components {
  .btn {
    box-shadow: 0px 0px 5px #c2d076;
    transition: 0.4s ease;
    @apply inline-block
    w-fit
    m-0 py-4 px-5
    uppercase
    leading-none
    tracking-widest
    border-2 border-solid border-accent
    font-semibold bg-accent text-dark;
  }
  .btn.alt {
    @apply bg-transparent text-accent;
  }
  .btn:hover {
    box-shadow: 0px 0px 10px #c2d076;
    @apply bg-white text-dark border-white;
  }
}
